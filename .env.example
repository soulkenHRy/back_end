# Environment Variables for Quiz Game Leaderboard Backend
# Copy this file to .env and fill in your values

# MongoDB Connection String
# For local development: mongodb://localhost:27017/quiz_leaderboard
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/quiz_leaderboard
MONGODB_URI=mongodb://localhost:27017/quiz_leaderboard

# Server Port (Railway will set this automatically)
PORT=3000
